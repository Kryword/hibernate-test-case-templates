<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.hibernate.bugs.model.City_ComputedColumns" table="city">
        <meta attribute="class-description">
            This class contains some properties that do some calculations on properties of the city class.
        </meta>

        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

        <property name="nameZIPCode" type="string" formula="name || '-' || ZIP" update="false" insert="false"/>
    </class>
</hibernate-mapping>
